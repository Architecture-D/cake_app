<div class="row">
 <div class="col-xs-1">
 </div>

<div class="col-xs-10">
 <h3 class="admin-title">会員一覧</h3><br>
<!-- 登録情報一覧 -->
<table class="table table-striped">
	<tr class="info">
		<th>会員ID</th>
		<th>氏名</th>
		<th>メールアドレス</th>
		<th>ステータス</th>
	</tr>
	<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td>
				<%= link_to admin_customer_path(customer.id) do %>
					<%= customer.last_name %>
					<%= customer.first_name %>
				<% end %>
			</td>
			<td><%= customer.email %></td>
			<td>
				<% if customer.is_deleted != true %>
					<span>有効</span>
				<% else %>
					<span>無効</span>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>
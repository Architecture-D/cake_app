<h3 class="admin-title">ジャンル編集</h3>
<%= form_with model:@genre, url: admin_genre_path, loclal:true do |f| %>
  <%= f.label :"ジャンル" %>
  <%= f.text_field :name %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :"有効" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :"無効" %>
  <%= f.submit "変更を保存する", class: "btn btn-primary" %>
<% end %>

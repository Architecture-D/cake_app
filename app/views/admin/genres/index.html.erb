<!-- サクセスメッセージ -->
<%= flash[:notice] %>
<!-- バリデーション チェック -->
<%= render 'admin/error', error: @genre %>
<div class="row">
  <div class="col-xs-6">
    <h3 class="admin-title">ジャンル一覧・追加</h3><br>
    <!-- 入力フォーム部分テンプレート化 -->
    <%= render 'newform', genre: @genre %>
    <br>
    <table class="table">
	  <thead>
		<tr class="info">
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	  </thead>
	  <tbody>
	    <% @genres.each do |genre| %>
		  <tr>
		    <td>
		  	  <%= genre.name %>
		    </td>
		    <td>
		  	  <%= genre.is_active ? "有効" : "無効" %>
		    </td>
		    <td>
		  	  <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %>
		    </td>
		  </tr>
	    <% end %>
	  </tbody>
    </table>
  </div>
  <div class="col-xs-6">
  </div>
</div>


<h3>ジャンル一覧・追加</h3>
<%= form_with model:@genre, url: admin_genres_path, loclal:true do |f| %>
  <%= f.label :"ジャンル" %>
  <%= f.text_field :name %>
  <%= f.radio_button :is_active, :true, checked:true %>
  <%= f.label :"有効" %>
  <%= f.radio_button :is_active, :false, checked:false %>
  <%= f.label :"無効" %>
  <%= f.submit "追加",class: "btn btn-primary" %>
<% end %>
<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th>状態</th>
		</tr>
	</thead>
	<tbody>
	  <% @genres.each do |genre| %>
		<tr>
		  <td>
		  	<%= genre.name %>
		  </td>
		  <td>
		  	<%= genre.is_active ? "有効" : "無効" %>
		  </td>
		  <td>
		  	<%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %>
		  </td>
		</tr>
	  <% end %>
	</tbody>
</table>


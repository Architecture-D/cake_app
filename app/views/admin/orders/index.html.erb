<h3>注文履歴一覧</h3>

<table class="table">
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td>
			<%= link_to admin_order_path(order) %>
			<%= order.created_at %>
		</td>
		<td>
			<%= order.フルネーム %>
		</td>
		<td>
			<%= order.quantity %>
		</td>
		<td>
			<%= order.status %>
		</td>
	</tr>
	<% end %>
</table>
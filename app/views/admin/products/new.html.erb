
<!-- バリデーション チェック -->
<% if @product.errors.any? %>
      <div id="error_explanation">
        <h3><%= @product.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>
<h3 class="admin-title">商品新規登録</h3><br>
  <%= form_with model:@product, url: admin_products_path, loclal:true do |f| %>
 <!--  画像投稿時のプレビュー機能はチャレンジ項目実装は時間があれば -->
	  <%= f.attachment_field :image %><br>

	  <div class="row">
	  <div class="col-xs-6">
	  <table class="table">
		<thead>
			<tr>
				<th><%= f.label :"商品名" %></th>
				<th><%= f.text_field :name %></th>
			</tr>
			<tr>
				<th><%= f.label :"商品説明" %></th>
				<th><%= f.text_area :introduction,:size=>"35"%></th>
			</tr>
			<tr>
				<th><%= f.label :"ジャンル"%></th>
				<th>
					<%= f.collection_select :genre_id, Genre.where(is_active: "true"), :id, :name,disabled: true, include_blank: "選択して下さい" %>
				</th>
			</tr>
			<tr>
				<th><%= f.label :"税抜価格" %></th>
				<th><%= f.text_field :price %>円</th>
			</tr>
			<tr>
				<th><%= f.label :"販売ステータス" %></th>
				<th>
					<%= f.select :is_active ,[['販売中',true],['売切れ',false]], { include_blank: "選択して下さい", selected: 0 } %>
				</th>
			</tr>
		</thead>
	  </table>
 	  </div>
	  </div>

    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>


<h3>ショッピングカート</h3>

<div>
	<%= link_to cart_items_path, method: :delete do %>
		<h5>カートを空にする</h5>
	<% end %>
</div>
<%= form_for cart_items_path, method: :patch do |f| %>
<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	<%= @cart_items.each do |item| %>
	</thead>
	<tbody>
		<tr>
			<td>
				<%= item.product.name %>
			</td>
			<td>
				¥<%= item.product.price %>
			</td>
			<td>
				
			</td>
			<td>
				
			</td>
			<td>
				<%= link_to '削除する', cart_item_path(item), method: :delete %>
			</td>
		</tr>
	</tbody>
</table>
<% end %>
<% end %>
Customers#edit

<!-- ヘッダー記載箇所イメージ -->
ヘッダー部分

<!-- タイトル -->
登録情報編集

<!-- 編集フォーム部分 -->
	
<%= form_for(@customer, url: customers_path) do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @customer.errors.any? %>
		<div>
			<h3><%= @customer.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @customer.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<!-- フォーム部分 -->
	<div>
		<label>名前</label>
		<span>（姓）</span>
		<%= f.text_field :last_name %>
		<span>（名）</span>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<label>フリガナ</label>
		<span>（セイ）</span>
		<%= f.text_field :last_name_kana %>
		<span>（メイ）</span>
		<%= f.text_field :first_name_kana %>
	</div>

	<div>
		<label>メールアドレス</label>
		<%= f.text_field :email %>
	</div>

	<div>
		<label>郵便番号（ハイフンなし）</label>
		<%= f.text_field :post_code %>
	</div>

	<div>
		<label>住所</label>
		<%= f.text_field :address %>
	</div>

	<div>
		<label>電話番号（ハイフンなし）</label>
		<%= f.text_field :phone_number %>
	</div>	

	<div>
		<%= f.submit "編集内容を保存する" %>
	</div>

<% end %>

<!-- 退会ボタン -->
<div>
	<%= link_to hide_customers_path do %>
		<button>退会する</button>
	<% end %>
</div>

<div class="row">
 <div class="col-xs-1">
 </div>
 <div class="col-xs-7">

<br>
<h3><i class="fas fa-user"></i>マイページ</h3><br>


<div>
	<span class="mypage-span">登録情報</span>
	<%= link_to edit_info_customers_path do %>
		<button class="btn btn-primary">編集する</button>
	<% end %>
	<%= link_to edit_customer_registration_path do %>
		<button class="btn btn-primary">パスワードを変更する</button>
	<% end %>
</div><br>

<!-- customer情報の表示 -->

<table class="table table-striped">
	<tr>
		<th>氏名</th>
		<td>
			<span><%= @customer.last_name %></span>
			<span><%= @customer.first_name %></span>
		</td>
	</tr>
	<tr>
		<th>カナ</th>
		<td>
			<span><%= @customer.last_name_kana %></span>
			<span><%= @customer.first_name_kana %></span>	
		</td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td>
			<span><%= @customer.post_code %></span>
		</td>
	</tr>
	<tr>
		<th>住所</th>
		<td>
			<span><%= @customer.address %></span>
		</td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td>
			<span><%= @customer.phone_number %></span>
		</td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td>
			<span><%= @customer.email %></span>
		</td>
	</tr>
</table>


<!-- 配送先一覧画面へのリンク部分 -->
<div>
	<span class="mypage-span-a">配送先</span>
	<%= link_to destinations_path do %>
		<button class="btn btn-success">一覧を見る</button>
	<% end %>
</div><br>

<!-- 注文履歴画面へのリンク部分 -->
<div>
	<span class="mypage-span">注文履歴</span>
	<%= link_to orders_path do %>
		<button class="btn btn-warning">一覧を見る</button>
	<% end %>
</div>

 </div>
</div>
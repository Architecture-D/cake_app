Customers＃show 画面

<!-- ヘッダー記載箇所イメージ -->
ヘッダー部分

<!-- タイトル -->
マイページ

<!-- 登録情報へのリンク部分 -->
<div>
	<span>登録情報</span>
	<%= link_to edit_customers_path do %>
		<button>編集する</button>　
	<% end %>
	<%= link_to edit_customer_password_path do %>
		<button>パスワードを変更する</button>　
	<% end %>
</div>

<!-- customer情報の表示 -->
<table>
	<tr>
		<th>氏名</th>
		<td>
			<span><%= @customer.last_name %></span>
			<span><%= @customer.first_name %></span>
		</td>
	</tr>
	<tr>
		<th>カナ</th>
		<td>
			<span><%= @customer.last_name_kana %></span>
			<span><%= @customer.first_name_kana %></span>	
		</td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td>
			<span><%= @customer.post_code %></span>
		</td>
	</tr>
	<tr>
		<th>住所</th>
		<td>
			<span><%= @customer.address %></span>
		</td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td>
			<span><%= @customer.phone_number %></span>
		</td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td>
			<span><%= @customer.email %></span>
		</td>
	</tr>
</table>

<!-- 配送先一覧画面へのリンク部分 -->
<div>
	<span>配送先</span>
	<%= link_to destinations_path do %>
		<button>一覧を見る</button>　
	<% end %>
</div>

<!-- 注文履歴画面へのリンク部分 -->
<div>
	<span>注文履歴</span>
	<%= link_to orders_path do %>
		<button>一覧を見る</button>
	<% end %>
</div>
Destinations#edit

<!-- ヘッダー記載箇所イメージ -->
ヘッダー部分

<!-- タイトル -->
配送先編集

<!-- エラーメッセージ表示-->
<% if @destination.errors.any? %>
	<div>
		<h3><%= @destination.errors.count %>error prohibited this obj from being saved:</h3>
		<ul>
			<% @destination.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

	<!-- フォーム部分 -->
<%= form_for(@destination) do |f| %>
	<div>
		<label>郵便番号（ハイフンなし）</label>
		<%= f.text_field :post_code %>
	</div>

	<div>
		<label>住所</label>
		<%= f.text_field :address %>
	</div>
	<div>
		<label>宛名</label>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.submit "登録する" %>
	</div>
<% end %>


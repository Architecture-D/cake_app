Destinations#index

<!-- ヘッダー記載箇所イメージ -->
ヘッダー部分

<!-- タイトル -->
配送先登録/一覧

<!-- 登録情報へのリンク部分 -->


	<!-- エラーメッセージ表示-->
<% if @destination.errors.any? %>
	<div>
		<h3><%= @destination.errors.count %>error prohibited this obj from being saved:</h3>
		<ul>
			<% @destination.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

	<!-- フォーム部分 -->
<%= form_for(@destination) do |f| %>
	<div>
		<label>郵便番号（ハイフンなし）</label>
		<%= f.text_field :post_code %>
	</div>

	<div>
		<label>住所</label>
		<%= f.text_field :address %>
	</div>
	<div>
		<label>宛名</label>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.submit "登録する" %>
	</div>
<% end %>

	<!-- 一覧部分 -->
<table>
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @destinations.each do |destination| %>
			<tr>
				<td><%= destination.post_code %></td>
				<td><%= destination.address %></td>
				<td><%= destination.name %></td>
				<td>
					<%= link_to edit_destination_path(destination.id) do %>
						<button>編集する</button>
					<% end %>
					<%= link_to destination_path(destination.id), method: :delete do %>
						<button>削除する</button>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


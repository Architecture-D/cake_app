<h2>注文情報確認</h2>
<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
		<% sum_all = 0 %>
	    <% @cart_items.each do |item| %>
		<tr>
			<td>
				<%= attachment_image_tag item.product, :image, :fill, 50, 50 %>
				<%= item.product.name %>
			</td>
			<td>
				¥<%= item.product.tax_include_price %>
			</td>
			<td>
				<%= item.quantity %>
			</td>
			<td>
				¥<%= sum_product = item.product.tax_include_price.to_i * item.quantity %>円
        		<% sum_all += sum_product %>
			</td>
		</tr>
		<% end %>
	</thead>
</table>
<table>
	<thead>
		<tr>
			<th>送料</th>
			<th><%= @order.shipping_cost %></th>
		</tr>
		<tr>
			<th>商品合計</th>
			<th>800円</th>
		</tr>
		<tr>
			<th>請求金額</th>
			<th>800円</th>
		</tr>
	</thead>
</table>
<strong>支払方法</strong>
<%= @order.payment_method %>
<strong>お届け先</strong>
<%= @order.post_code %>
<%= @order.address %>
<%= @order.name %>
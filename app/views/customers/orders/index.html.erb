<h3>注文履歴一覧</h3>
<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
	  <% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y年%m月%d日 %H時%M分%S秒') %></td>
			<td>
				<div>
				  <%= order.post_code %>
			    </div>
			    <div>
				  <%= order.address %>
			    </div>
			    <div>
				  <%= order.name %>
			    </div>
			</td>
			<td>
			    <% order.order_products.each do |order_product| %>
			    <%= order_product.product.name %>
			    <% end %>
			</td>
			<td><%= order.total_payment %></td>
			<td><%= order.status %></td>
			<td><%= link_to "表示する", order_path(order), class: "btn btn-danger btn-lg" %></td>
		</tr>
	  <% end %>
	</tbody>
</table>

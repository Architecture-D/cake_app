<h3><i class="far fa-copy"></i></i>注文履歴一覧</h3><br>
<table class="table table-striped ">
	<thead>
		<tr class="warning">
			<th class="col-xs-2">注文日</th>
			<th class="col-xs-4">配送先</th>
			<th class="col-xs-3">注文商品</th>
			<th class="col-xs-1">支払金額</th>
			<th class="col-xs-1">状態</th>
			<th class="col-xs-1">注文詳細</th>
		</tr>
	</thead>
	<tbody>
	  <% @orders.each do |order| %>
		<tr>
			<td class="col-xs-2"><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
			<td class="col-xs-4">
				<div>
				  〒<%= order.post_code %>
			    </div>
			    <div>
				  <%= order.address %>
			    </div>
			    <div>
				  <%= order.name %>
			    </div>
			</td>
			<td class="col-xs-3">
			    <% order.order_products.each do |order_product| %>
			    <%= order_product.product.name %>
			    <% end %>
			</td>
			<td class="col-xs-1">¥<%= order.total_payment %></td>
			<td class="col-xs-1"><%= order.status %></td>
			<td class="col-xs-1"><%= link_to "詳細", order_path(order), class: "btn btn-primary" %></td>
		</tr>
	  <% end %>
	</tbody>
</table>
<div class='admin-paginate'><%= paginate @orders %></div>

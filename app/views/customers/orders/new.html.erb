<h2>注文情報入力</h2>
  <strong>支払方法</strong>
   <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
    <div>
      <div>
        <%= f.radio_button :payment_method, :'クレジットカード', checked: true %>
        <%= f.label :"クレジットカード" %>
      </div>
      <div>
        <%= f.radio_button :payment_method, :'銀行振込'%>
        <%= f.label :"銀行振込" %>
      </div>
      <strong>お届け先</strong>
      <div>
      <%= f.radio_button :add, 1, checked: true  %>
      <%= f.label :"ご自身の住所" %>
      <%= @customer.post_code %>
      <%= @customer.address %>
      <%= @customer.first_name %>
    </div>
    <div>
      <%= f.radio_button :add, 2 %>
      <%= f.label :"登録済み住所から選択" %>
      <%= f.collection_select :address, @customer.destinations, :id, :order_address %>
    </div>
    <div>
      <%= f.radio_button :add, 3 %>
      <%= f.label :"新しいお届け先" %>
      <%= f.fields_for :new_add do |n| %>
        <div>
          <%= n.label :"郵便番号（ハイフンなし）" %>
          <%= n.text_field :post_code %>
        </div>
        <div>
          <%= n.label :"住所" %>
          <%= n.text_field :address %>
        </div>
        <div>
          <%= n.label :"宛名" %>
          <%= n.text_field :name %>
        </div>
      <% end %>
    </div>
    </div>
  <%= f.submit "確認画面へ進む",class: "btn btn-primary" %>
<% end %>
<div class="products-index"><br>

 <div class="row">
  <div class="col-xs-12">

<table class="table table-bordered">
  <tr>
   <th class="col-xs-2"><h4>　<i class="fas fa-search"></i>ジャンル別一覧</h4></th>

   <td class="col-xs-10">
    　<%= link_to("全商品", products_path, {class: "nav-link"}) %>
    <% @genres.each do |genre| %>
    <%= link_to( genre.name, products_path(genre_id: genre.id), {class: "nav-link"}) %>
    <% end %>
    <span class="new-genre"><i class="far fa-star"></i>新ジャンル随時追加予定!!</span>
   </td>
  </tr>
</table>

  </div>
 </div>

 <div class="row">

    <% if params[:genre_id].present? %>
      <h2><%= @product.genre.name %></h2>
      <h4>(全<%= @products_genre_all.count %>件)</h4>
    <% else %>
      <h2>全商品</h2>
      <h4>(全<%= @products_all.count %>件)</h4>
    <% end %>

<% @products.each do |product| %>
      <div class="col-xs-3">
        <%= link_to product_path(product) do %>
  	    <%= attachment_image_tag product, :image, :fill, 280, 280, class: 'product-image'%>
        <% end %>
        <p><%= product.name %><br>
       ¥<%= product.price %></p>
      </div>
     <% end %>
 </div>
 <div class='admin-paginate'><%= paginate @products %></div>


</div>


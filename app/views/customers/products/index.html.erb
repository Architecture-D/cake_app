<div class="products-index"><br>
 <div class="row">

  <div class="col-xs-2">
   <h3>ジャンル検索</h3>
  </div>
  <div class="col-xs-10">

  	<% @genres.each do |genre| %>
  	<%= genre.name %>
  	<% end %>

  </div>
 </div>
 <div class="row">
  	<h2>商品一覧</h2>
  	 <% @products.each do |product| %>
  	 　<div class="col-xs-4">
        <%= link_to product_path(product) do %>
  	    <%= attachment_image_tag product, :image, :fill, 380, 380%>
        <% end %>
        <%= product.name %><br>
       ¥<%= product.price %>
      </div>
     <% end %>
 </div>


</div>

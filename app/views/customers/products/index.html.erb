<div class="products-index"><br>
  <%= render 'genre', genres: @genres %>
  <div class="row">
    <% if params[:genre_id].present? %>
      <h2><%= @product.genre.name %></h2>
    <% else %>
      <h2>全商品</h2>
    <% end %>
    <h4>(全<%= @products_all.count %>件)</h4>
    <% @products.each do |product| %>
      <div class="col-xs-3">
        <%= link_to product_path(product) do %>
  	      <%= attachment_image_tag product, :image, :fill, 280, 280, class: 'product-image'%>
        <% end %>
        <p><%= product.name %><br>
          ¥<%= product.price %></p>
      </div>
    <% end %>
  </div>
  <div class='admin-paginate'><%= paginate @products %></div>
</div>


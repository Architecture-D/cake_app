 <div class="row">
   <h3>ジャンル検索</h3>
</div><br>

<div class="row">
  <div class="col-xs-1">
  </div>

  <div class="col-xs-3">
   <%= attachment_image_tag(@product, :image, :fill, 280, 280, class: 'product-image') %>
  </div>
  <div class="col-xs-3">
    <h2 class="product-name"><%= @product.name %></h2><br>
    <p><%= @product.introduction %></p>
  </div>
</div>
<div class="row">
  <div class="col-xs-5">
  </div>
  <div class="col-xs-7">
  	<div class="price-margin">
    <h4>¥ <%= @product.price %>(税込)</h4>
    <% if customer_signed_in? %>
    <%= form_with(model: [@product, @cart], local: true, url: {controller: 'cart_items', action: 'create'}) do |f| %>
    <%= f.label :ご購入個数 %>
    <%= f.number_field :quantity, value: 1 ,min:1, max:99 %>個
    <%= f.hidden_field :product_id, value: @product.id  %>
    <%= f.submit "カートに入れる", class: "btn btn-primary" %>
    <% end %>
    <% else %>
    <%= link_to "新規登録して購入する", new_customer_registration_path ,class:"btn btn-success"%>
    <% end %>
    </div>
  </div>
</div>
